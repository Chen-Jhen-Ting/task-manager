<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= notice %></h1>
    <h1><%= alert %></h1>
    <% if user_signed_in? %>
      <h1><%= current_user.name %></h1>
    <% end %>
    <%= yield %>
  </body>
</html>
